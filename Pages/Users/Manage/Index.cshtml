@page
@model www_Blush_Brush.Pages.Users.Manage.IndexModel

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/site.css" />

<style>
    .btn-create {
        display: inline-block;
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 10px;
    }

</style>
<div class="user-management-container" style="display: flex; gap: 2rem;">
    <!-- LEFT: Role Filter -->
    <div class="filter-panel" style="width: 200px;">
        <h2>Filter by Role</h2>
        <form method="get">
            <div>
                <button type="submit" name="role" value="Artist" class="btn-filter">Artists</button>
            </div>
            <div>
                <button type="submit" name="role" value="Customer" class="btn-filter">Customers</button>
            </div>
            <div>
                <button type="submit" name="role" value="" class="btn-filter">All</button>
            </div>
        </form>
    </div>

    <!-- RIGHT: User Table -->
    <div class="user-table" style="flex-grow: 1;">
        <h2>User List</h2>

        <p>
            <a asp-page="Create" class="btn-create">Create New</a>
            <a asp-page="ViewListPending" class="btn-create">Artist Pending</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.User[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.User[0].Email)</th>
                    <th>@Html.DisplayNameFor(model => model.User[0].Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.User[0].Password)</th>
                    <th>@Html.DisplayNameFor(model => model.User[0].Role)</th>
                    <th>@Html.DisplayNameFor(model => model.User[0].AvatarUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.User[0].IsActive)</th>
                    <th>@Html.DisplayNameFor(model => model.User[0].CreatedAt)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.User)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>@Html.DisplayFor(modelItem => item.AvatarUrl)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn-edit">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn-details">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn-delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>