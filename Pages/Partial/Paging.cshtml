@model www_Blush_Brush.Pages.Partial.PagingModel
@{
    var queryKeyword = string.IsNullOrEmpty(Model.Keyword) ? "" : $"&keyword={Model.Keyword}";
    var queryMakeupId = Model.MakeupId == null ? "" : $"&makeupId={Model.MakeupId}";
}
<style>
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        font-family: Arial, sans-serif;
    }

        .pagination a {
            /* padding: 8px 16px; */
            text-decoration: none;
            border-radius: 6px;
            font-weight: bold;
            font-size: 25px;
            transition: background-color 0.3s ease;
            display: inline-block;
        }

        .pagination span {
            font-size: 20px;
            font-weight: 500;
            color: #333;
        }
</style>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a href="@($"{Model.UrlBase}?pageNumber={Model.CurrentPage - 1}{queryKeyword}{queryMakeupId}")">←</a>
    }

    <span>Trang @Model.CurrentPage / @Model.TotalPages</span>

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a href="@($"{Model.UrlBase}?pageNumber={Model.CurrentPage + 1}{queryKeyword}{queryMakeupId}")">→</a>
    }
</div>





